<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/rl_padding">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/rl_title">


        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ap_black"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"
            android:text="@string/list_frag" />


    </RelativeLayout> <!--end of title layout -->

         <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_title"
            android:id="@+id/rl_img_nd_txt">

            <TextView
                android:id="@+id/description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:textStyle="normal"
                android:textColor="@color/bt_orange"
                android:text="@string/list_frag" />

            <ImageView
                android:id="@+id/thumb_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/default_image_round"
              
                android:layout_alignParentEnd="true"
                />


         </RelativeLayout>

    </RelativeLayout><!--end of layout used for padding-->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="03dip"
            android:layout_below="@+id/rl_padding"
            android:id="@+id/boundary_view"
            android:background="@color/ap_black"/><!--used for line view -->



    </RelativeLayout> <!--root layout-->


